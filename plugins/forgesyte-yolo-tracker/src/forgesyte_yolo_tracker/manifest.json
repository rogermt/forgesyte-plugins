{
  "id": "forgesyte-yolo-tracker",
  "name": "forgesyte-yolo-tracker",
  "version": "1.0.0",
  "description": "ForgeSyte plugin for football player, ball, pitch, team classification, and radar analysis using YOLO + Supervision + SigLIP.",
  "author": "Roger",
  "license": "MIT",
  "entrypoint": "forgesyte_yolo_tracker.plugin",
  "capabilities": [
    "player_detection",
    "player_tracking",
    "ball_detection",
    "team_classification",
    "pitch_detection",
    "radar_visualization"
  ],
  "tools": {
    "player_detection": {
      "description": "Detect players in a single frame.",
      "inputs": {
        "frame_base64": "string",
        "device": "string",
        "annotated": "boolean"
      },
      "outputs": {
        "detections": "array",
        "annotated_frame_base64": "string?"
      }
    },
    "player_tracking": {
      "description": "Track players across frames using ByteTrack.",
      "inputs": {
        "frame_base64": "string",
        "device": "string",
        "annotated": "boolean"
      },
      "outputs": {
        "detections": "array",
        "annotated_frame_base64": "string?"
      }
    },
    "ball_detection": {
      "description": "Detect the football in a single frame.",
      "inputs": {
        "frame_base64": "string",
        "device": "string",
        "annotated": "boolean"
      },
      "outputs": {
        "detections": "array",
        "annotated_frame_base64": "string?"
      }
    },
    "team_classification": {
      "description": "Classify players into teams using SigLIP embeddings + UMAP + KMeans.",
      "inputs": {
        "frame_base64": "string",
        "device": "string",
        "annotated": "boolean"
      },
      "outputs": {
        "detections": "array",
        "team_ids": "array?",
        "annotated_frame_base64": "string?"
      }
    },
    "pitch_detection": {
      "description": "Detect pitch keypoints for homography mapping.",
      "inputs": {
        "frame_base64": "string",
        "device": "string",
        "annotated": "boolean"
      },
      "outputs": {
        "keypoints": "array",
        "annotated_frame_base64": "string?"
      }
    },
    "radar": {
      "description": "Generate radar (bird's-eye) view of player positions.",
      "inputs": {
        "frame_base64": "string",
        "device": "string",
        "annotated": "boolean"
      },
      "outputs": {
        "radar_points": "array",
        "annotated_frame_base64": "string?"
      }
    }
  }
}
